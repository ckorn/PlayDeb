+QImage ServerDialog::scalePlayerPic(const QImage &img) {
+
+	if(img.height() > 400) {
+		return img.scaledToHeight(400);
+	} else if(img.width() > 640) {
+		return img.scaledToWidth(640);
+	}
+
+	return img;
+}
